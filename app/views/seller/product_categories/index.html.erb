<div class="content">
  <div class="header">      
    <h1 class="page-title">商品</h1>
            <ul class="breadcrumb">
    <li><%= link_to('首頁', seller_products_path) %></li>    
    <li class="active">商品分類</li>
  </ul>
  </div> 
  <div class="main-content">
  <div class="btn-toolbar list-toolbar">
    <%= link_to new_seller_product_category_path, class: :"btn btn-primary" do %>
      <i class="fa fa-plus">新增分類</i>
    <% end %>
  </div> 

  <table class="table">   
    <thead>
      <tr>
        <th>類別名稱</th>
        <th>創建日期</th>
        <th style="width: 3.5em;"></th>
      </tr>
    </thead>
    <% @product_categories.each do |i| %>
    <tbody>
      <tr>
        <td><%= i.name %></td>
        <td><%= i.created_at %></td>
        <td>
            <%= link_to edit_seller_product_category_path(i) do %>
              <i class="fa fa-pencil"></i>
            <% end %>            
            <a href="#<%= i.id %>" role="button" data-toggle="modal"><i class="fa fa-trash-o"></i></a>            
        </td>
      </tr>
    </tbody>
    <div class="modal small fade" id="<%= i.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
              <h3 id="myModalLabel">Delete Confirmation</h3>
          </div>
          <div class="modal-body">
              <p class="error-text"><i class="fa fa-warning modal-icon"></i>Are you sure you want to delete <%= i.name %>?</p>
          </div>
          <div class="modal-footer">
              <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cancel</button>
              <%= link_to('Delete', seller_product_category_path(i), class: :"btn btn-danger", data: {dismiss: "modal"}, method: :delete) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </table>

  <footer>
      <hr>
      <!-- Purchase a site license to remove this link from the footer: http://www.portnine.com/bootstrap-themes -->
      <p class="pull-right">A <a href="http://www.portnine.com/bootstrap-themes" target="_blank">Free Bootstrap Theme</a> by <a href="http://www.portnine.com" target="_blank">Shoes</a></p>
      <p>© 2014 <a href="http://www.portnine.com" target="_blank">Shoes</a></p>
  </footer>
</div>

