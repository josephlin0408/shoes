<!--contact-->
<div class="contact-info">
  <div class="container">          
    <div class="contact-form">
      <div class="row">
        <div class="col-md-12" >
        <h1><b>會員註冊</b></h1>
        </div>
          <div class="col-md-4" >
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>            
              <div class="form-group">
                <%= f.label '名字' %><br />
                <%= f.text_field :name, autofocus: true, class: :"text" %>
              </div>
              <div class="form-group">
                <%= f.label '信箱' %><br />
                <%= f.email_field :email, autofocus: true, class: :"text" %>
              </div>
              <div class="form-group">
                <%= f.label '密碼' %>
                <% if @validatable %>
                <em>(請輸入最少 <%= @minimum_password_length %> 字元的密碼)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: :"text" %>
              </div>
              <div class="form-group">
                <%= f.label '再輸入一次密碼' %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: :"text" %>
              </div>
              <div class="form-group">
                  <%= f.submit "註冊" %>
              </div>
              <% end %>
              <p><a href="privacy-policy.html" style="font-size: .75em; margin-top: .25em;">Privacy Policy</a></p>
              <%= render "devise/shared/links" %>
              <div class="clearfix"></div>           
            </div>
          </div>              
        </div>
      </div>
    </div>           
  </div>
</div>
